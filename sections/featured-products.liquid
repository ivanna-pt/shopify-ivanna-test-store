{{ 'section-featured-products.css' | asset_url | stylesheet_tag }}

<script src="{{ 'featured-products.js' | asset_url }}" defer></script>
{% style %}
{% endstyle %}

{% assign target_collection = section.settings.collection | default: collection %}
<div
  class="featured-products section-{{ section.id }}"
  data-section-id="{{ section.id }}"
  data-collection-handle="{{ target_collection.handle }}"
>
  <div class="featured-products__container page-width">
    {%- if section.settings.section_title != blank -%}
      <h2 class="featured-products__title">{{ section.settings.section_title }}</h2>
    {%- endif -%}
    <div class="featured-products__sort-by">
      <form id="SortByForm" class="collection-sort">
        <label for="SortBy">{{ 'custom_sections.featured_products.sort_by' | t }}</label>
        <select name="sort_by" id="SortBy" class="collection-sort__select">
          <option value="best-selling" selected>{{ 'custom_sections.featured_products.best_selling' | t }}</option>
          <option value="price-ascending">{{ 'custom_sections.featured_products.price_asc' | t }}</option>
          <option value="price-descending">{{ 'custom_sections.featured_products.price_desc' | t }}</option>
          <option value="title-ascending">{{ 'custom_sections.featured_products.title_asc' | t }}</option>
          <option value="title-descending">{{ 'custom_sections.featured_products.title_desc' | t }}</option>
        </select>
      </form>
    </div>
    {%- if target_collection != blank -%}
      {%- assign products = target_collection.products -%}
      {%- assign products_to_show = section.settings.products_to_show -%}
      <ul class="featured-products__grid">
        {%- for product in products limit: products_to_show -%}
          <li class="product-card" data-variant-id="{{ product.first_available_variant.id }}">
            <a href="{{ product.url }}" class="product-card__link">
              <div class="product-card__image">
                {%- if product.featured_image -%}
                  {{
                    product.featured_image
                    | image_url: width: 500, height: 500
                    | image_tag: width: 269, height: 269, alt: product.featured_image.alt, loading: 'lazy'
                  }}
                {%- else -%}
                  {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
                {%- endif -%}
              </div>
              <div class="product-card__info">
                <h3 class="product-card__title">{{ product.title }}</h3>
                {%- if section.settings.show_price -%}
                  <div class="product-card__price">
                    {{ product.price | money }}
                  </div>
                {%- endif -%}
                {%- if section.settings.show_rating -%}
                  <div class="product-card__rating">
                    {{ 'custom_sections.featured_products.rating' | t: number: 5 }}
                  </div>
                {%- endif -%}
              </div>
            </a>
            {%- if section.settings.show_add_to_cart -%}
              {% comment %} Add to cart with a build-in form and hidden input {% endcomment %}
              {% comment %}
                <form method="post" action="{{ routes.cart_add_url }}" class="product-card__form">
                  <input type="hidden" name="id" value="{{ product.variants.first.id }}">
                  <button type="submit" class="product-card__add-to-cart">Add to Cart</button>
                </form>
              {% endcomment %}

              {% comment %}
                Add to cart with AJAX
              {% endcomment %}
              <button type="button" class="button product-card__add-to-cart" data-add-to-cart>
                {{ 'products.product.add_to_cart' | t }}
              </button>
            {%- endif -%}
          </li>
        {%- endfor -%}
      </ul>
    {%- else -%}
      <p>{{ 'custom_sections.featured_products.no_collection' | t }}</p>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Featured Products",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Featured Products"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Select Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "label": "Number of products to show",
      "min": 2,
      "max": 12,
      "step": 1,
      "default": 6
    },
    {
      "type": "checkbox",
      "id": "show_price",
      "label": "Show Price",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_rating",
      "label": "Show Rating",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_add_to_cart",
      "label": "Show Add to Cart Button",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Featured Products",
      "category": "Custom"
    }
  ]
}
{% endschema %}
